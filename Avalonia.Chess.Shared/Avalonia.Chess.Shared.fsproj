  </ItemGroup>
  <ItemGroup>
    <AvaloniaResource Include="Styles.xaml" />
    <Content Include="Images\Bishop-b.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\Bishop-w.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <Content Include="Images\King-b.png">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
